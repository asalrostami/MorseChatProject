<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImage_requestsFragment"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/defaultimage1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_name_requestFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textStyle="bold"
                android:text="Display name"
                android:layout_marginLeft="7dp"
                android:textColor="@color/colorAccent"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/tv_status_requestFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Display User Status"
                android:textSize="14sp"
                android:padding="5dp"
                android:layout_marginLeft="7dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="7dp">

                <Button
                    android:id="@+id/btn_accept_requestFragment"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:layout_marginLeft="7dp"
                    android:background="@drawable/message_text_background_two"
                    android:text="Accept"/>
                <Button
                    android:id="@+id/btn_cancel_requestFragment"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:textColor="@color/colorLogo"
                    android:background="@drawable/message_text_background"
                    android:layout_marginLeft="10dp"
                    android:text="Cancel"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>