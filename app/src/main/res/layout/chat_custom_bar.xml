<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    android:background="@color/colorToolbar">

    <TextView
        android:id="@+id/tv_userName_chatBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/colorLogo"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Display User Name"/>

    <TextView
        android:id="@+id/tv_last_seen_chatBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textSize="14sp"
        android:textColor="@color/colorLogo"
        android:textStyle="bold|italic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_userName_chatBar"
        android:text="last seen"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_chatBar"
        android:layout_width="40dp"
        android:layout_height="40dp"

        android:layout_alignBottom="@+id/tv_last_seen_chatBar"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:src="@drawable/defaultimage1"/>
</RelativeLayout>