<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.asal.morsechatproject.StatusActivity">

    <include layout="@layout/app_bar_layout"
        android:id="@+id/status_app_bar">

    </include>

    <EditText
        android:id="@+id/etStatus_status"
       style="@style/multiText"
        android:hint="Change status Here"
        android:layout_below="@+id/status_app_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:ems="10"
        android:inputType="textMultiLine"/>

    <Button
        android:id="@+id/btn_ChangeStatus_Status"
        style="@style/button"
        android:layout_below="@+id/etStatus_status"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="93dp"
        android:text="Change Status"/>


</RelativeLayout>
